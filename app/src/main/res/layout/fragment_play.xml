<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_one"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:paddingBottom="3dp"
            android:paddingLeft="6dp"
            android:paddingRight="3dp"
            android:paddingTop="6dp"
            app:srcCompat="@drawable/animal1" />

        <ImageView
            android:id="@+id/img_two"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:paddingBottom="3dp"
            android:paddingLeft="3dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp"
            app:srcCompat="@drawable/animal2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_three"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            app:srcCompat="@drawable/animal3" />

        <ImageView
            android:id="@+id/img_four"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:paddingBottom="6dp"
            android:paddingLeft="3dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            app:srcCompat="@drawable/animal4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/check" />

        <Button
            android:id="@+id/btn_cheat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:hint="@string/cheat" />
    </LinearLayout>
</TableLayout>